<script type="text/javascript">
function validate()
{
	if(document.form.link=="")
	{
		alert("Please fill form");
		return false;
	}
return false;
}

function a(param)
{
	var cntr = parseInt(param);
	document.getElementById(cntr).style.display='none';
	cntr=cntr+1;
	document.getElementById(cntr).style.display='block';
	return true;
}	
</script>
